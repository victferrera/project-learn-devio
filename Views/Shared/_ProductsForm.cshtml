@model AppMercadoBasico.Models.Product

<div>
    <input hidden asp-for="@Model.Id" type="text">
</div>
<div class="mb-3">
    <label asp-for="@Model.Name" class="form-label"></label>
    <input asp-for="@Model.Name" type="text" class="form-control">
</div>
<div class="mb-3">
    <label asp-for="@Model.Description" class="form-label"></label>
    <input asp-for="@Model.Description" type="text" class="form-control">
</div>
<div class="mb-3">
    <label asp-for="@Model.Price" class="form-label"></label>
    <input asp-for="@Model.Price" type="text" class="form-control">
</div>
<div class="mb-3 form-check">
    <input asp-for="@Model.IsEnable" values="1" type="checkbox" class="form-check-input">
    <label asp-for="@Model.IsEnable" class="form-check-label" for="exampleCheck1"></label>
</div>
<button type="submit" class="btn btn-primary">Save</button>